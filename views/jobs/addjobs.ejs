<% layout('./public/layout') %>
    <div class="row">

        <div class="col-lg-6 col-md-offset-3">
            <form method="post"  enctype="multipart/form-data">
                <h1>Agregar Puestos  de Empleo</h1>

                <div class="form-group">
                    <label>Posicion del Trabajo </label>
                    <input type="text" name="position" class="form-control" required="true" />
                </div>


                <div class="form-group">
                    <label>Descripcion del Trabajo </label>
                    <textarea class="form-control" rows="4" id="comment" name="description"></textarea>
                </div>




                <div class="form-group" >
                   <label> Categoria</label>
                   <select  name="category" class="form-control">
                     <% category.forEach(function(value,index,arr){ %>
                       <option name ="category"value="<%= arr[index]._id%>"><%= arr[index].description%></option>

                         <%  }) %>
                  </select>
                </div>


                <div class="form-group">
                    <label>Tanda </label>
                    <input type="text" name="jobtime" class="form-control" required="true" />
                </div>


                <div class="form-group">
                    <label> Empresa </label>
                    <input type="text" name="company" class="form-control" required="true" />
                </div>

                <div class="form-group">
                    <label>Ubicacion del Empleo </label>
                    <input type="text" name="location" class="form-control" required="true" />
                </div>


                <div class="form-group">
                    <label class="radio-inline">
                        <input type="radio" name="optradio" value="true">Vacante Publica</label>
                    <label class="radio-inline">
                        <input type="radio" name="optradio" value="false">Vacante Privada</label>
                </div>

                <div class="form-group">
                    <label class="control-label">Selecione Imagen para Logo </label>
                    <input id="input-1a" type="file" name="logo" class="file" data-show-preview="false">

                </div>


                <div class="form-group">
                    <label>URL Del Trabajo </label>
                    <input type="text" name="url" class="form-control" required="true" />
                </div>


                <div class="form-group">
                    <label>Email de Contacto </label>
                    <input type="email" name="email" class="form-control" required="true" />
                </div>

                <button type="submit" class="btn btn-success">Agregar Puesto </button>
                <a class="btn btn-default" href="/return" role="button">Regresar Pagina Anterior &raquo;</a>
            </form>

        </div>
    </div>
